<Window x:Class="SACD.Ventanas.Parametros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SACD.Ventanas"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" 
        Title="Parametros" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Nuevo" HorizontalAlignment="Left" Margin="38,100,0,0" VerticalAlignment="Top"/>


        <!-- Accept or Cancel -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Margin="150,173,0,0">
            <Button x:Name="okButton"  IsDefault="True" Content="OK"/>
            <Button x:Name="cancelButton" IsCancel="True" Content="Cancel"/>
        </StackPanel>
        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="38,60,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
